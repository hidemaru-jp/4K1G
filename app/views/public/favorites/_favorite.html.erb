<% if post.favorited_by?(current_user) %>

  <!--  いいねされている時  -->
  <%= link_to post_favorites_path(post.id),class: "link_orange", method: :delete, remote: true do %>
    <i class="fa-solid fa-star"></i><%= post.favorites.where(reaction: 0).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id),class: "link_red", method: :delete, remote: true do %>
    <i class="fa-solid fa-heart"></i><%= post.favorites.where(reaction: 1).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id),class: "link_blue", method: :delete, remote: true do %>
    <i class="fa-solid fa-glasses"></i><%= post.favorites.where(reaction: 2).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id),class: "link_green", method: :delete, remote: true do %>
    <i class="fa-solid fa-seedling"></i><%= post.favorites.where(reaction: 3).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id),class: "link_yellow", method: :delete, remote: true do %>
    <i class="fa-solid fa-bolt"></i><%= post.favorites.where(reaction: 4).count %>
  <% end %>&nbsp;&nbsp;

<% else %>

  <!--  いいねされていない時  -->
  <%= link_to post_favorites_path(post.id, reaction: 0, favorited_id: post.user.id),class: "link_black", method: :post, remote: true do %>
    <i class="fa-solid fa-star"></i><%= post.favorites.where(reaction: 0).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id, reaction: 1, favorited_id: post.user.id),class: "link_black", method: :post, remote: true do %>
    <i class="fa-solid fa-heart"></i><%= post.favorites.where(reaction: 1).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id, reaction: 2, favorited_id: post.user.id),class: "link_black", method: :post, remote: true do %>
    <i class="fa-solid fa-glasses"></i><%= post.favorites.where(reaction: 2).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id, reaction: 3, favorited_id: post.user.id),class: "link_black", method: :post, remote: true do %>
    <i class="fa-solid fa-seedling"></i><%= post.favorites.where(reaction: 3).count %>
  <% end %>&nbsp;&nbsp;
  <%= link_to post_favorites_path(post.id, reaction: 4, favorited_id: post.user.id),class: "link_black", method: :post, remote: true do %>
    <i class="fa-solid fa-bolt"></i><%= post.favorites.where(reaction: 4).count %>
  <% end %>&nbsp;&nbsp;

<% end %>
