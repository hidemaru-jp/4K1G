<div class="row">
  <% users.each do |user| %>
  <div class="col-12 col-lg-6">
    <div class="card" style="margin-bottom: 10px;">
      <div class="row">
        <div class="col-3 d-flex align-items-center justify-content-center">
          <%= link_to user_path(user) do %>
            <div class="mt-2"><%= image_tag user.get_profile_image(70,70),class: "profile_image" %></div>
            <p class="caption text-center"><%= "#{user.posts.count} 投稿" %></p>
          <% end %>
        </div>
        <div class="col-6">
          <h4 class="mt-2"><%= user.name %></h4>
          <p class ="mt-3"><%= user.introduction %></p>
        </div>
        <div class="col-3 d-flex align-items-center justify-content-center">
          <div class="text-center">
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
              <% else %>
                <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= paginate users %>