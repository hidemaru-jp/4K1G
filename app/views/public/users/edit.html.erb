<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3 class="title" style="margin-bottom: 20px;">ユーザ編集</h3>
      <div class="card">
        <div class="list-group-item">
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :名前 %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール画像 %>
            <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
          </div>
          <div class="form-group">
            <%= f.label :自己紹介 %>
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= link_to "キャンセル",user_path(current_user.id), class: 'btn btn-secondary' %> |
            <%= f.submit "更新", class: 'btn btn-success' %> |
            <%= link_to '退会する', user_unsubscribe_path(current_user.id), class: "glyphicon glyphicon-tint btn btn-danger"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
