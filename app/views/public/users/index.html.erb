<div class="container">
  <div class="row justify-content-end mb-3 mt-3">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
     <%= f.text_field :search ,placeholder: "ユーザー名"%>
     <%= f.submit '検索する', name: nil %>
    <% end %>
  </div>
  <table class='table table-inverse'>
    <thead>
      <tr align="center">
        <th >ユーザー</th>
        <th>自己紹介</th>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody align="center">
      <% @users.each do |user| %>
        <tr>
          <td align="center">
            <%= link_to user_path(user) do %>
              <div><%= image_tag user.get_profile_image(100,100) %></div>
              <div><%= user.name %></div>
            <% end %>
          </td>
          <td><%= user.introduction %></td>
          <% if current_user != user %>
            <td>
              <% if current_user.following?(user) %>
                <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
              <% else %>
                <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

</div>