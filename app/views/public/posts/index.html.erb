<div class="container">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= image_tag post.user.get_profile_image(100,100) %>
          </td>
          <td><%= post.user.name %></td>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= post.content %>
          </td>
            <% end %>
          <% if post.get_image.present? %>
            <td><%= image_tag post.get_image %></td>
          <% end %>
          <% if current_user.id == post.user_id %>
            <td><%= link_to 'Destroy', post_path(post.id), method: :delete, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td>
            <% if post.favorited_by?(current_user) %>
              <p>
                <%= link_to post_favorites_path(post.id), method: :delete do %>
                  ♥<%= post.favorites.count %> いいね
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to post_favorites_path(post.id), method: :post do %>
                  ♡<%= post.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_with model: @post do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control content' %>
    </div>

    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>

  <% end %>

</div>