<div class="container">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>

      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <% if post.get_image.present? %>
          <td><%= image_tag post.get_image %></td>
          <% end %>
          <td><%= link_to 'Destroy', post_path(post.id), method: :delete, class: "btn btn-sm btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_with model: @post do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control content' %>
    </div>

    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>

  <% end %>

</div>