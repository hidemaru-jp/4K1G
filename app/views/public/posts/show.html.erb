<div class="container">
  <table class='table table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @post.user.get_profile_image(100,100) %></td>
        <td><%= @post.content %></td>
        <% if @post.get_image.present? %>
        <td><%= image_tag @post.get_image %></td>
        <% end %>
      </tr>
    </tbody>

    <tbody>
      <% @post.post_comments.each do |post_comment| %>
        <tr>
          <td>
            <%= image_tag post_comment.user.get_profile_image(100,100) %>
          </td>
          <td><%= post_comment.user.name %></td>
          <td>
            <%= post_comment.comment %>
          </td>
          <% if post_comment.get_image.present? %>
            <td><%= image_tag post_comment.get_image %></td>
          <% end %>
          <% if current_user.id == post_comment.user_id %>
            <td><%= link_to 'Destroy', post_post_comment_path(post_comment.post,post_comment), method: :delete, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_with model: [@post,@post_comment] do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: 'form-control content' %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>

  <% end %>

</div>