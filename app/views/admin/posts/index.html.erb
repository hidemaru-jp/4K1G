<div class="container">
  <div>
    <h3 class="title">投稿一覧</h3>
  </div>
  <div class="row justify-content-end mb-3">
    <%= form_with url: admin_posts_path, method: :get, local: true do |f| %>
     <%= f.text_field :search ,placeholder: "キーワード"%>
     <%= f.submit '検索する', name: nil %>
    <% end %>
  </div>
  <%= render 'index', posts: @posts %>

</div>