<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto my-5">
      <h4 class="headline">
        <%= @user.name %>さんの会員情報編集
      </h4>
      <div class="row">
        <div class="col-md-10 mx-auto">
          <div class="row mb-3">
            <div class="col-md-2">
              ユーザーID
            </div>
            <div class="col-md-7 offset-md-1">
              <%= @user.id %>
            </div>
          </div>

          <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
            <div class="row mb-3">
              <div class="col-md-2">
                <%= f.label "氏名" %>
              </div>
              <div class="col-md-7 offset-md-1">
                <div class="form-inline">
                  <%= f.text_field :name, class: "col-md-4 form-control" %>
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">
                <%= f.label "メールアドレス" %>
              </div>
              <div class="col-md-7 offset-md-1">
                <%= f.email_field :email, class: "col-md-4 form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-2">
                会員ステータス
              </div>
              <div class="col-md-7 offset-md-1">
                <%= f.radio_button :is_deleted, false, checked: true %>
                <%= f.label :is_deleted, "有効", value: false %>
                &emsp;
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, "退会", value: true %>
              </div>
            </div>

            <div class="row mt-5">
              <div class="col-md-2"></div>
              <div class="col-md-2 offset-md-1">
                <%= f.submit "変更を保存", class: "btn btn-success" %>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>