<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto my-5">
      <h4>ユーザー一覧</h4>

      <div class="row mt-3">
        <div class="col-md-10 mx-auto">
          <table class="table">
            <thead>
              <tr>
                <th style="width: 15%">ユーザーID</th>
                <th style="width: 30%">氏名</th>
                <th style="width: 35%">メールアドレス</th>
                <th style="width: 20%">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td>
                    <%= link_to admin_user_path(user) do %>
                      <u class="text-dark"><%= user.name %></u>
                    <% end %>
                  </td>
                  <td><%= user.email %></td>
                  <td>
                    <% if user.is_deleted == false %>
                      <div class="text-success"><strong>有効</strong></div>
                    <% else %>
                      <div class="text-muted"><strong>退会</strong></div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 mx-auto">
          <%= paginate @users %>
        </div>
      </div>

    </div>
  </div>
</div>