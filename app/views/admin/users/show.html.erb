<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto my-5">
      <h4 class="headline">
        <%= @user.name %>さんのユーザー詳細
      </h4>
      <div class="row">
        <div class="col-md-10 mx-auto">
          <div class="row mb-3">
            <div class="col-md-2">
              ユーザーID
            </div>
            <div class="col-md-7 offset-lg-1">
              <%= @user.id %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-2">
              氏名
            </div>
            <div class="col-md-7 offset-md-1">
              <%= @user.name %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-2">
              メールアドレス
            </div>
            <div class="col-md-7 offset-md-1">
              <%= @user.email %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-2">
              会員ステータス
            </div>
            <div class="col-md-7 offset-md-1">
              <% if @user.is_deleted == false %>
                <div class="text-success"><strong>有効</div></strong>
              <% else %>
                <div class="text-muted"><strong>退会</div></strong>
              <% end %>
            </div>
          </div>

          <div class="row mt-5">
            <div class="col-md-2"></div>
            <div class="col-md-2 offset-md-1">
              <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>